%p#notice= notice
%h1 Doctors
%table
  %thead
    %tr
      %th First name
      %th Last name
      %th License number
      %th Specialization
      %th Clinic name
      %th Clinic address
      %th Contact
      %th{:colspan => "3"}
  %tbody
    - @doctors.each do |doctor|
      %tr
        %td= doctor.first_name
        %td= doctor.last_name
        %td= doctor.license_number
        %td= doctor.specialization
        %td= doctor.clinic_name
        %td= doctor.clinic_address
        %td= doctor.contact
        %td= link_to 'Show', doctor
        %td= link_to 'Edit', edit_doctor_path(doctor)
        %td= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Doctor', new_doctor_path
