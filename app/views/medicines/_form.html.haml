= form_with(model: medicine) do |form|
  - if medicine.errors.any?
    #error_explanation
      %h2
        = pluralize(medicine.errors.count, "error")
        prohibited this medicine from being saved:
      %ul
        - medicine.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :generic_name
    = form.text_field :generic_name,:placeholder => "Paracetamol"
  .field
    = form.label :brand_name
    = form.text_field :brand_name, :placeholder => "Biogesic"
  
  .field
    = form.label :dosage_form
    = form.text_field :dosage_form, :placeholder => "500 mg tablet"
  .field
    = form.label :category
    = form.select :category, [["Others", "others"], ["Antibiotics", "antibiotic"], ["Fever and Relief", "antipyretic"], ["Vitamins", "vitamins"],["Antibiotics", "antibiotic"]]
  .field
    = form.label :price 
    = form.text_field :cost, :placeholder => "â‚±"
  .actions
    = form.submit
