<p id="notice"><%= notice %></p>

<h1>Prescribed Medicines</h1>

<table>
  <thead>
    <tr>
      <th>Brand name</th>
      <th>Generic name</th>
      <th>Quantity</th>
      <th>Prescription</th>
      <th>Medicine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescribed_medicines.each do |prescribed_medicine| %>
      <tr>
        <td><%= prescribed_medicine.brand_name %></td>
        <td><%= prescribed_medicine.generic_name %></td>
        <td><%= prescribed_medicine.quantity %></td>
        <td><%= prescribed_medicine.prescription_id %></td>
        <td><%= prescribed_medicine.medicine_id %></td>
        <td><%= link_to 'Show', prescribed_medicine %></td>
        <td><%= link_to 'Edit', edit_prescribed_medicine_path(prescribed_medicine) %></td>
        <td><%= link_to 'Destroy', prescribed_medicine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

