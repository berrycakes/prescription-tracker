= form_with(model: prescription_note) do |form|
  - if prescription_note.errors.any?
    #error_explanation
      %h2
        = pluralize(prescription_note.errors.count, "error")
        prohibited this prescription_note from being saved:
      %ul
        - prescription_note.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :content
    = form.text_field :content
  .field
    = form.label :prescription_id
    = form.text_field :prescription_id
  .actions
    = form.submit
